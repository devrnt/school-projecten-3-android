<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/beschrijvingTxt"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="59dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:text="TextView"
        android:layout_width="90dp"
        android:layout_height="wrap_content" android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp" android:id="@+id/datumTxt"
        android:layout_marginTop="73dp" android:layout_alignParentTop="true" android:textAlignment="center"/>
